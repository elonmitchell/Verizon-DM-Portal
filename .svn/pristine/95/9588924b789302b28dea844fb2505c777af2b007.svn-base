/* fancybox popups */
.fancybox-popup-wrap {
  display: none;
  font-size: 14px;
}

.fb-popup {
  position: relative;
  border: solid #cccccc;
  border-width: 4px;
  padding: 24px 20px 23px 24px;
  background: #eeeeee;
}

.fb-popup h1 {
  margin-bottom: 8px;
  text-align: center;
}

.fb-popup p {
  margin: 0 0 18px;
  font-size: 16px;
  line-height: 24px;
}

.fb-popup table tr td {
  padding: 10px 5px 0px 5px;
  font-size: 14px;
}

.fb-popup table tr.errorRow {
  display: none;
}

.fb-popup table tr.relatedRow td {
  padding-top: 5px;
}

.fb-popup table tr.errorRow td {
  padding-top: 0;
  padding-bottom: 0px;
}

.fb-popup .popup-submit-button {
  margin-top: 20px;
  text-align: center;
}

.fb-popup .popup-submit-button-left { 
  float: left;
}

.fb-popup .popup-submit-button-right { 
  float: right;
}

.fb-popup .popup-submit-button-clear {
  clear: both;
}

.formLabel {
}

.formFieldError {
  color: #890000;
}

.formFieldErrorSmall {
  font-size: 11px;
  color: #890000;
}

